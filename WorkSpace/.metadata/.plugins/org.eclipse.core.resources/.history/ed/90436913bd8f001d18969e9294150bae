<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<!-- db.properties 파일 위치 지정 -->
	<context:property-placeholder 
		location="classpath:dbconn/db.properties"/>



	
	<!-- DBCP 객체 생성 - Spring 컨테이너가 관리 : smart01 - id는 bteam -->
	<bean id="bteam_dbcp" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="${oracleDriver}"/>
		<property name="url" value="${home}"/>
		<property name="username" value="${bteam.username}"/>
		<property name="password" value="${bteam.password}"/>
	</bean>
	
	
	<!-- Mybatis 사용을 위한 객체 - SqlSession 생성 객체인 SqlSessionFactory : smart01 - id는 bteam-->
	<bean id="bteam_factory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref='bteam_dbcp'></property> <!-- id 값을 통해, DBCP 객체 주소 가져옴 -->
		<property name="mapperLocations" value='classpath:sqlmap/*-mapper.xml'></property>
	</bean>	



	
	<!-- Mybatis 사용을 위한 객체 - SqlSession 생성 객체 : smart01 - id는 bteam-->
	<bean class="org.mybatis.spring.SqlSessionTemplate">
								<!-- id 값을 통해, SqlSessionFactory 객체 주소 가져옴 -->
		<constructor-arg name="sqlSessionFactory" ref="bteam_factory"></constructor-arg>
		<qualifier value="bteam"></qualifier>
	</bean>

</beans>
