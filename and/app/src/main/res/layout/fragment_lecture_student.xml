<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".teacher.mylecture.lecturehome.LectureStudentFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_in_cnt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="@color/main_dark"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                >
                <TextView
                    android:id="@+id/tv_in_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10명"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출석"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_out_cnt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="@color/main_dark"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                >
                <TextView
                    android:id="@+id/tv_out_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10명"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입실전"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:hint="학생이름 검색"
                android:singleLine="true"
                android:inputType="text"
                android:maxLength="10"
                android:privateImeOptions="defaultInputmode=korean"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@drawable/ic_search"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>




</LinearLayout>