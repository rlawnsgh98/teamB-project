                android:text="목"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                style="@style/TEXT_STYLE_1"
                android:text="금"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        </TableRow>
