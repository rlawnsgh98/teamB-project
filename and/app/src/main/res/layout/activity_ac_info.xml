<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawer.AcInfoActivity">
    <!--상단바-->
    <include layout="@layout/top_toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/academy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                style="@style/TEXT_STYLE_1"
                android:text="국영수전문학원 입니다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ac1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:src="@drawable/ac2"
                    android:layout_width="200dp"
                    android:layout_height="100dp"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                style="@style/TEXT_STYLE_4"
                android:text="성적 향상, 공부습관 바로잡기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:layout_margin="10dp"
                style="@style/TEXT_STYLE_1"
                android:text="교육과정"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="3dp"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/TEXT_STYLE_1"
                android:text="더보기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/link_btn1"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/naverblogicon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageView
                    android:id="@+id/link_btn2"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/instaricon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:text="국영수전문학원\n전화번호:1010-0001\n이메일:hana@naver.com\n주소:하나로1번길01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>